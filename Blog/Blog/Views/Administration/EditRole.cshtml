@using Microsoft.AspNetCore.Identity
@model Blog.ViewModels.ChangeRoleViewModel

@{
    ViewBag.Title = "Change roles";
}

<div class="container">
    <main role="main" class="pb-3">
        <br /><br />
        <h2>Change role to @Model.UserEmail</h2>

        <form asp-action="EditRole" method="post">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="form-group">
                @foreach (IdentityRole role in Model.AllRoles)
                {
                    <input type="checkbox" class="form-check-input" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name <br />
                }
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </main>
</div>