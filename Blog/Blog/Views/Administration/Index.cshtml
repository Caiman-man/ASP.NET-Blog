@model Blog.ViewModels.AdministrationFormViewModel

@{
    ViewBag.Title = "Users and roles";
}

<div class="container">
    <main role="main" class="pb-3">
        <br /><br />
        <h2>Roles</h2>

        <table id="roles" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Role name</th>
                    <th>Role Id</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>@role.Id</td>
                        <td>
                            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="get">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                        @*<td>@Html.ActionLink("Delete", "DeleteRole", "Administration", new { @id = role.Id }, null)</td>*@
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("NewRole", "Administration") + "'");">New role</button>

        <br /><br /><br />
        <h2>Users</h2>

        <table id="users" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>User name</th>
                    <th>Email</th>
                    <th>Change role</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-userid="@user.Id">Change role</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="get">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                    @*<td>@Html.ActionLink("Delete", "Delete", "Administration", new { @id = user.Id }, null)</td>*@
                </tr>
                }
            </tbody>
        </table>
        <br />
        <button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("NewUser", "Administration") + "'");">New user</button>
    </main>
</div>